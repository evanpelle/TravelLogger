<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.evan.travellogger.NewTrip">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trip_name_field"
        android:layout_centerHorizontal="true"
        android:editable="true"
        android:focusable="true"
        android:minHeight="50dp"
        android:minWidth="200dp"
        android:hint="Enter Trip Name"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Trip"
        android:id="@+id/new_trip_button"
        android:onClick="newTripButtonAction"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trip_description_field"
        android:layout_below="@+id/trip_name_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:minHeight="50dp"
        android:minWidth="200dp"
        android:hint="Enter Trip Description"/>

</RelativeLayout>
